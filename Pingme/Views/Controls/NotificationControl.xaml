<UserControl x:Class="Pingme.Views.Controls.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F2F2F2">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Center" Width="480">

            <!-- Tiêu đề -->
            <TextBlock Text="Notification (3)"
                       FontSize="22" FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <!-- Danh sách thông báo -->
            <StackPanel Orientation="Vertical" Margin="0,10" Background="White">

                <!-- THÔNG BÁO 1 -->
                <Border CornerRadius="10" BorderThickness="1" BorderBrush="#DDD" Margin="0,10" Background="White">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="40" Height="40" Grid.Column="0" Margin="0,0,10,0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/Icons/logo-app.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Ping me" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Đã có phiên bản cập nhật mới"
                                       Foreground="Purple" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- THÔNG BÁO 2 -->
                <Border CornerRadius="10" BorderThickness="1" BorderBrush="#DDD" Margin="0,10" Background="White">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="40" Height="40" Grid.Column="0" Margin="0,0,10,0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Thu Nữ" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Bạn đã lỡ một cuộc gọi từ Thu Nữ"
                                       Foreground="Crimson" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- THÔNG BÁO 3 -->
                <Border CornerRadius="10" BorderThickness="1" BorderBrush="#DDD" Margin="0,10" Background="White">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="40" Height="40" Grid.Column="0" Margin="0,0,10,0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Nhóm 10" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Đã bắt đầu cuộc họp Báo cáo tiến độ"
                                       Foreground="Green" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
