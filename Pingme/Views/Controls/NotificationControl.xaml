<UserControl x:Class="Pingme.Views.Controls.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Run Text="Notification "/>
            <Run Text="(3)" Foreground="Red"/>
        </TextBlock>

        <!-- Container chính có nền xám nhạt -->
        <Border Grid.Row="1" Background="#F4F4F4" CornerRadius="10" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Thông báo 1 -->
                    <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="40" Height="40" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/Icons/logo-app.jpg"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel>
                                <TextBlock Text="Ping me" FontWeight="Bold"/>
                                <Border Background="#EEEEEE" CornerRadius="5" Padding="4" Margin="0,5,0,0">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="Đã có "/>
                                        <Run Text="phiên bản cập nhật mới" Foreground="Purple" FontWeight="Bold"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Thông báo 2 -->
                    <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="40" Height="40" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel>
                                <TextBlock Text="Thu Nữ" FontWeight="Bold"/>
                                <Border Background="#EEEEEE" CornerRadius="5" Padding="4" Margin="0,5,0,0">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="Bạn đã lỡ một cuộc gọi từ "/>
                                        <Run Text="Thu Nữ" Foreground="Red" FontWeight="Bold"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Thông báo 3 -->
                    <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="40" Height="40" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel>
                                <TextBlock Text="Nhóm 10" FontWeight="Bold"/>
                                <Border Background="#EEEEEE" CornerRadius="5" Padding="4" Margin="0,5,0,0">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="Đã bắt đầu cuộc họp "/>
                                        <Run Text="Báo cáo tiến độ" Foreground="Green" FontWeight="Bold"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
