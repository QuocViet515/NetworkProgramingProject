<UserControl x:Class="Pingme.Views.Controls.MessageInputBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        
        <StackPanel Orientation="Horizontal" Margin="10">
            
            <TextBox x:Name="MessageInput" Width="500" Height="40" Margin="0,0,10,0" />
            <Button Content="Gửi" Width="60" Click="Send_Click" />
            <Button Content="📎" Width="40" Margin="5,0,0,0" Click="AttachFile_Click" />
            <Button Content="📞"
        Width="40"
        Margin="5,0,0,0"
        Click="Call_Click"/>

            <Button x:Name="MicToggleBtn" Content="🎤" Width="40" Click="ToggleMic_Click" />
            <Button x:Name="CamToggleBtn" Content="🎥" Width="40" Click="ToggleCam_Click" />
        </StackPanel>

    </Grid>
</UserControl>
