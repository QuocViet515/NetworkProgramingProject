             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Border Background="LightGray" Padding="10" Margin="5"
            CornerRadius="10" HorizontalAlignment="Left">
        <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" FontSize="14"/>
    </Border>
</UserControl>
