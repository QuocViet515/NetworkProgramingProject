<UserControl x:Class="Pingme.Views.Controls.ProfileInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

    <Border Background="White" Padding="20" CornerRadius="10" Margin="5">
        <StackPanel Background="WhiteSmoke" Margin="10">
            <!-- Ảnh đại diện -->
            <StackPanel HorizontalAlignment="Center">
                <Ellipse Width="120" Height="120" Margin="0,10">
                    <Ellipse.Fill>
                        <ImageBrush  x:Name="AvatarBrush" ImageSource="/Assets/Icons/avatar-default.png" />
                    </Ellipse.Fill>
                </Ellipse>
                <Button x:Name="ChangeAvatar" Content="Thay ảnh" Click="ChangeAvatar_Click" Width="90" Margin="0,5,0,10" Visibility="Collapsed"/>
            </StackPanel>

            <!-- Tên người dùng -->
            <TextBlock x:Name="DisplayUserName" Text="Tên người dùng" FontSize="22" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,10" />

            <!-- Thông tin chi tiết -->
            <StackPanel Orientation="Horizontal" Margin="10,15,10,0" HorizontalAlignment="Center">
                <TextBlock Text="Thông tin" FontSize="16" FontWeight="Bold"/>
            </StackPanel>

            <Grid Margin="0,0,0,10" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Username -->
                <TextBlock Text="Username:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="20,5,5,5"/>
                <TextBlock x:Name="UserNameText" Grid.Row="0" Grid.Column="1" Margin="5,5,20,5"/>
                <TextBox x:Name="UserNameEdit" Grid.Row="0" Grid.Column="1" Visibility="Collapsed" Margin="5,5,20,5"/>

                <!-- Full Name -->
                <TextBlock Text="Fullname:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="20,5,5,5"/>
                <TextBlock x:Name="FullNameText" Grid.Row="1" Grid.Column="1" Margin="5,5,20,5"/>
                <TextBox x:Name="FullNameEdit" Grid.Row="1" Grid.Column="1" Visibility="Collapsed" Margin="5,5,20,5"/>

                <!-- Email -->
                <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="20,5,5,5"/>
                <TextBlock x:Name="EmailText" Grid.Row="2" Grid.Column="1" Margin="5,5,20,5"/>
                <TextBox x:Name="EmailEdit" Grid.Row="2" Grid.Column="1" Visibility="Collapsed" Margin="5,5,20,5"/>

                <!-- Phone -->
                <TextBlock Text="Phone:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="20,5,5,5"/>
                <TextBlock x:Name="PhoneText" Grid.Row="3" Grid.Column="1" Margin="5,5,20,5"/>
                <TextBox x:Name="PhoneEdit" Grid.Row="3" Grid.Column="1" Visibility="Collapsed" Margin="5,5,20,5"/>

                <!-- Birthday -->
                <TextBlock Text="Birthday:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="20,5,5,5"/>
                <TextBlock x:Name="BirthdayText" Grid.Row="4" Grid.Column="1" Margin="5,5,20,5"/>
                <TextBox x:Name="BirthdayEdit" Grid.Row="4" Grid.Column="1" Visibility="Collapsed" Margin="5,5,20,5"/>

                <!-- Address -->
                <TextBlock Text="Address:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="20,5,5,5"/>
                <TextBlock x:Name="AddressText" Grid.Row="5" Grid.Column="1" Margin="5,5,20,5"/>
                <TextBox x:Name="AddressEdit" Grid.Row="5" Grid.Column="1" Visibility="Collapsed" Margin="5,5,20,5"/>
            </Grid>

            <!-- Nút Edit và Save -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                <Button x:Name="EditButton" Content="Edit" Width="70" Margin="5"
                        Background="#FF6C6C" Foreground="White" FontWeight="Bold"
                        Click="EditButton_Click"/>
                <Button x:Name="SaveButton" Content="Save" Width="70" Margin="5"
                        Background="Green" Foreground="White" FontWeight="Bold"
                        Click="SaveButton_Click" Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>

    </Border>
</UserControl>
