<UserControl x:Class="Pingme.Views.Controls.OutgoingMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             Height="Auto" Width="Auto">
    <Border Background="LightBlue" Padding="10" Margin="5"
            CornerRadius="10" HorizontalAlignment="Right">
        <StackPanel x:Name="MessageContainer">
            <Emoji:TextBlock x:Name="MessageTextBlock"
                             TextWrapping="Wrap"
                             FontSize="14"
                             FontFamily="Segoe UI Emoji"
                             Foreground="Black" />
        </StackPanel>
    </Border>
</UserControl>
