<UserControl x:Class="Pingme.Views.Controls.MyFriendAndGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <StackPanel Margin="20">
        <!-- Title -->
        <TextBlock Text="Bạn bè"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- Danh sách bạn bè trong khung xám -->
        <Border Background="#F4F4F4" CornerRadius="10" Padding="10" Margin="0,5,0,20">
            <WrapPanel HorizontalAlignment="Left">
                <StackPanel Margin="10" Width="120">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Anh Tuấn" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="10" Width="120">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Thu Nữ" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="10" Width="120">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Cẩm Hòa" HorizontalAlignment="Center"/>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Title -->
        <TextBlock Text="Nhóm"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Danh sách nhóm trong khung xám -->
        <Border Background="#F4F4F4" CornerRadius="10" Padding="10">
            <WrapPanel HorizontalAlignment="Left">
                <StackPanel Margin="10" Width="120">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Nhóm 10" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="10" Width="120">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="AnimeVietsub" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="10" Width="120">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Icons/avatar-default.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="MixiGaming" HorizontalAlignment="Center"/>
                </StackPanel>
            </WrapPanel>
        </Border>
    </StackPanel>
</UserControl>
