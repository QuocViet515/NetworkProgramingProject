<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Pingme.Views.Windows.CropImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crop Avatar"
        Height="500" Width="500"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="CanvasCrop" Background="White">
                <Image x:Name="ImageToCrop" Stretch="Uniform"/>

                <!-- Hình chữ nhật vùng crop -->
                <Rectangle x:Name="CropRect"
                           Stroke="DeepSkyBlue"
                           StrokeThickness="2"
                           Fill="#33FFFFFF"
                           Visibility="Visible"/>

                <!-- Khung hình tròn minh họa avatar -->
                <Ellipse x:Name="CropCircle"
                         Stroke="Gray" StrokeDashArray="3"
                         StrokeThickness="1.5"
                         Fill="Transparent"
                         Visibility="Visible"/>
            </Canvas>
        </ScrollViewer>

        <!-- Nút Crop dưới cùng -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Crop" Width="80" Height="30" Margin="5,10,0,10"
                    Click="Crop_Click"/>
        </StackPanel>
    </Grid>
</Window>
