<Window x:Class="Pingme.Views.Windows.videoCallWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cuộc gọi video" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Black">

    <Grid Background="Black">
        <!-- Remote Video or Avatar -->
        <StackPanel x:Name="RemoteVideoContainer"
              Background="Black">
            <!-- Video sẽ được thêm vào đây bằng code -->
            <Image x:Name="RemoteAvatar"
                   Width="200" Height="200"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Stretch="UniformToFill"
                   Visibility="Collapsed"
                   ClipToBounds="True"/>
        </StackPanel>

        <!-- Local video or avatar (nhỏ góc dưới) -->
        <Grid Width="200" Height="150"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Margin="0,0,10,10">

            <!-- Khung chứa video dùng Panel WinForms -->
            <WindowsFormsHost x:Name="_localVideoHost"
                      Visibility="Collapsed" />

            <!-- Ảnh đại diện khi tắt cam -->
            <Image x:Name="LocalAvatar"
           Stretch="UniformToFill"
           Visibility="Collapsed"
           ClipToBounds="True"/>
        </Grid>


        <!-- Control Buttons -->
        <Border Background="#66000000"
                Padding="10"
                CornerRadius="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,384,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ToggleButton x:Name="BtnToggleCamera"
                              Width="50" Height="50"
                              Margin="0,0,15,0"
                              ToolTip="Bật/tắt camera"
                              Background="#FF333333"
                              BorderBrush="Transparent"
                              Foreground="White"
                              Click="BtnToggleCamera_Click"
                              IsChecked="False"
                              FontSize="24"
                              Content="📷" />

                <ToggleButton x:Name="BtnToggleMic"
                              Width="50" Height="50"
                              Margin="0,0,15,0"
                              ToolTip="Bật/tắt micro"
                              Background="#FF333333"
                              BorderBrush="Transparent"
                              Foreground="White"
                              Click="BtnToggleMic_Click"
                              IsChecked="True"
                              FontSize="24"
                              Content="🎤" />

                <Button x:Name="BtnEndCall"
                        Width="60" Height="60"
                        ToolTip="Kết thúc cuộc gọi"
                        Background="#E81123"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Click="BtnEndCall_Click"
                        FontSize="28"
                        Content="✕" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
