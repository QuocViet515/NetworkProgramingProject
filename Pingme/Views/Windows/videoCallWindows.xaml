<Window x:Class="Pingme.Views.Windows.videoCallWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:winForms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        Title="Cuộc gọi video" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F2F2F2"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Grid Background="#F2F2F2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Remote Video + Avatar -->
        <StackPanel Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent">
            <!-- Video container -->
            <winForms:WindowsFormsHost x:Name="RemoteVideoContainer"
                           Width="240" Height="180"
                           Background="Black"
                           Visibility="Collapsed" />


            <!-- Avatar nếu không có video -->
            <Image x:Name="RemoteAvatar"
                   Width="160" Height="160"
                   Stretch="UniformToFill"
                   Visibility="Visible"
                   Margin="10">
                <Image.Clip>
                    <EllipseGeometry Center="80,80" RadiusX="80" RadiusY="80"/>
                </Image.Clip>
            </Image>

            <!-- Tên người nhận -->
            <TextBlock Text="Người nhận"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Local Video + Avatar -->
        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent">
            <!-- Local video -->
            <Grid x:Name="_localVideoGrid"
      Width="240" Height="180"
      Background="Black"
      Visibility="Collapsed">
                <winForms:WindowsFormsHost x:Name="_localVideoHost"
                               Background="Black"
                               Visibility="Collapsed" />
            </Grid>


            <!-- Avatar nếu không có video -->
            <Image x:Name="LocalAvatar"
                   Width="160" Height="160"
                   Stretch="UniformToFill"
                   Visibility="Visible"
                   Margin="10">
                <Image.Clip>
                    <EllipseGeometry Center="80,80" RadiusX="80" RadiusY="80"/>
                </Image.Clip>
            </Image>

            <!-- Tên người gọi -->
            <TextBlock Text="Bạn"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Thông báo cuộc gọi -->
        <Border x:Name="CallStatusBanner"
                Background="#CC222222"
                CornerRadius="8"
                Padding="10"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.ColumnSpan="2"
                Visibility="Collapsed">
            <TextBlock x:Name="CallStatusText"
                       Text="📞 Cuộc gọi đã kết thúc từ phía bên kia"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       TextAlignment="Center" />
        </Border>

        <!-- Control Buttons -->
        <Border Background="#33000000"
                Padding="10"
                CornerRadius="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ToggleButton x:Name="BtnToggleCamera"
                              Width="56" Height="56"
                              Margin="5"
                              ToolTip="Bật/tắt camera"
                              Background="#333"
                              Foreground="White"
                              BorderThickness="0"
                              FontSize="22"
                              Content="📷"
                              Click="BtnToggleCamera_Click"
                              Cursor="Hand"
                              Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}" />

                <ToggleButton x:Name="BtnToggleMic"
                              Width="56" Height="56"
                              Margin="5"
                              ToolTip="Bật/tắt micro"
                              Background="#333"
                              Foreground="White"
                              BorderThickness="0"
                              FontSize="22"
                              Content="🎤"
                              Click="BtnToggleMic_Click"
                              Cursor="Hand"
                              Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}" />

                <Button x:Name="BtnEndCall"
                        Width="60" Height="60"
                        Margin="5"
                        ToolTip="Kết thúc cuộc gọi"
                        Background="#E81123"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="26"
                        Content="✕"
                        Click="BtnEndCall_Click"
                        Cursor="Hand"
                        BorderBrush="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
