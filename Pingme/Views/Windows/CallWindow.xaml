<Window x:Class="Pingme.Views.Windows.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cuộc gọi video" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Black">

    <Grid Background="Black">
        <!-- Remote video -->
        <StackPanel x:Name="RemoteVideoContainer"
                    Background="Black"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Visibility="Collapsed" />

        <!-- Avatar người nhận -->
        <Image x:Name="RemoteAvatar"
               Source="/Assets/Icons/avatar-default.png"
               Width="200" Height="200"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Stretch="UniformToFill"
               ClipToBounds="True"
               Visibility="Visible"/>

        <!-- Local video overlay -->
        <Grid Width="200" Height="150"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Margin="10">
            <!-- Video nếu bật camera -->
            <ContentControl x:Name="LocalVideoContainer"
                            Background="Black"
                            Visibility="Collapsed" />

            <!-- Avatar người gọi -->
            <Image x:Name="LocalAvatar"
                   Source="/Assets/Icons/avatar-default.png"
                   Stretch="UniformToFill"
                   Visibility="Visible" />
        </Grid>

        <!-- Thanh điều khiển -->
        <Border Background="#66000000"
                Padding="10"
                CornerRadius="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ToggleButton x:Name="BtnToggleCamera"
                              Width="50" Height="50"
                              Margin="0,0,15,0"
                              ToolTip="Bật/tắt camera"
                              Background="#FF333333"
                              BorderBrush="Transparent"
                              Foreground="White"
                              Click="BtnToggleCamera_Click"
                              IsChecked="False"
                              FontSize="24"
                              Content="🚫" />

                <ToggleButton x:Name="BtnToggleMic"
                              Width="50" Height="50"
                              Margin="0,0,15,0"
                              ToolTip="Bật/tắt micro"
                              Background="#FF333333"
                              BorderBrush="Transparent"
                              Foreground="White"
                              Click="BtnToggleMic_Click"
                              IsChecked="True"
                              FontSize="24"
                              Content="🎤" />

                <Button x:Name="BtnEndCall"
                        Width="60" Height="60"
                        ToolTip="Kết thúc cuộc gọi"
                        Background="#E81123"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Click="BtnEndCall_Click"
                        FontSize="28"
                        Content="✕" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
