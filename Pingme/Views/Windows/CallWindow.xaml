<Window x:Class="Pingme.Views.Windows.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cuộc gọi thoại" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F2F2F2"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Grid Background="#F2F2F2">

        <!-- Chia đôi màn hình -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Người nhận -->
        <StackPanel Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Image x:Name="RemoteAvatar"
                   Source="/Assets/Icons/avatar-default.png"
                   Width="160" Height="160"
                   Stretch="UniformToFill"
                   Visibility="Visible">
                <Image.Clip>
                    <EllipseGeometry Center="80,80" RadiusX="80" RadiusY="80"/>
                </Image.Clip>
            </Image>
            <TextBlock Text="Anh Tú"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Người gọi -->
        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Image x:Name="LocalAvatar"
                   Source="/Assets/Icons/avatar-default.png"
                   Width="160" Height="160"
                   Stretch="UniformToFill"
                   Visibility="Visible">
                <Image.Clip>
                    <EllipseGeometry Center="80,80" RadiusX="80" RadiusY="80"/>
                </Image.Clip>
            </Image>
            <TextBlock Text="Quốc Việt"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Remote video (ẩn theo logic) -->
        <StackPanel x:Name="RemoteVideoContainer"
                    Grid.ColumnSpan="2"
                    Background="Black"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Visibility="Collapsed" />

        <!-- Local video (ẩn theo logic) -->
        <Grid Width="160" Height="160"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Margin="10"
              Grid.Column="1">
            <ContentControl x:Name="LocalVideoContainer"
                            Background="Black"
                            Visibility="Collapsed" />
        </Grid>

        <!-- Thông báo kết thúc -->
        <Border x:Name="CallStatusBanner"
                Background="#FF2D2D2D"
                CornerRadius="8"
                Padding="10"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.ColumnSpan="2"
                Visibility="Collapsed">
            <TextBlock x:Name="CallStatusText"
                       Text="📞 Cuộc gọi đã kết thúc từ phía bên kia"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       TextAlignment="Center" />
        </Border>

        <!-- Controls -->
        <Border Background="#33000000"
                Padding="10"
                CornerRadius="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- Mic toggle -->
                <ToggleButton x:Name="BtnToggleMic"
                              Width="50" Height="50"
                              Margin="0,0,15,0"
                              ToolTip="Bật/tắt micro"
                              Background="#333"
                              BorderBrush="Transparent"
                              Foreground="White"
                              Click="BtnToggleMic_Click"
                              FontSize="24"
                              Content="🎤" />

                <!-- End call -->
                <Button x:Name="BtnEndCall"
                        Width="60" Height="60"
                        ToolTip="Kết thúc cuộc gọi"
                        Background="#E81123"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Click="BtnEndCall_Click"
                        FontSize="28"
                        Content="✕" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
