<Window x:Class="Pingme.Views.Dialogs.FindFriendDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tìm bạn"
        Width="500" Height="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Scrollbar nhỏ -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Track Name="PART_Track">
                            <Track.Thumb>
                                <Thumb Background="DarkGray"/>
                            </Track.Thumb>
                        </Track>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Đổ bóng -->
        <DropShadowEffect x:Key="DropShadow"
                          Color="#888"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Direction="270"
                          Opacity="0.4"/>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Padding="15"
            BorderBrush="#DDD" BorderThickness="1"
            Effect="{StaticResource DropShadow}">
        <DockPanel>

            <!-- Nút thoát -->
            <Button Content="❌"
                    Width="26" Height="26"
                    FontSize="14"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Close_Click"
                    DockPanel.Dock="Top"/>

            <!-- Ô tìm kiếm -->
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock Text="🔍 Tìm bạn (tên, username, email, sđt):"
                           FontWeight="Bold" Margin="0,0,0,5"/>
                <DockPanel>
                    <TextBox x:Name="SearchBox"
                             Height="30" Width="400"
                             TextChanged="SearchBox_TextChanged"/>
                    <Button x:Name="SearchBtn"
                            Content="🔍"
                            Width="40" Height="30"
                            Margin="5,0,0,0"
                            Click="Search_Click"/>
                </DockPanel>
                <TextBlock x:Name="StatusText"
                           Foreground="Gray"
                           FontStyle="Italic"
                           Margin="5,5,0,0"/>
            </StackPanel>

            <!-- Danh sách kết quả -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ResultPanel" />
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>
