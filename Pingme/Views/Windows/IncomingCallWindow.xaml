<Window x:Class="Pingme.Views.Windows.IncomingCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:Pingme.Views.Controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cuộc gọi thoại đến"
        Height="360" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <DropShadowEffect x:Key="Shadow" BlurRadius="10" ShadowDepth="2" Color="#333" Opacity="0.25"/>
    </Window.Resources>

    <Grid Background="#FAFAFA">
        <Border CornerRadius="16"
                Background="White"
                Padding="20"
                Margin="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Effect="{StaticResource Shadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Avatar + Tên -->
                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10">
                    <Ellipse x:Name="AvatarEllipse"
                             Width="110" Height="110"
                             Stroke="#2196F3" StrokeThickness="2"
                             Margin="0,0,0,12"/>
                    <TextBlock x:Name="CallerName"
                               Text="Tên người gọi"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#212121"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Status & Timer -->
                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Đang đổ chuông..."
                               FontSize="16"
                               Foreground="#555"
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <Border Background="#FFEFEFEF" Padding="8,4" CornerRadius="6">
                        <!-- Ring Countdown -->
                        <Grid Width="100" Height="100" Margin="0,0,0,20">
                            <!-- Viền nền xám -->
                            <Ellipse Stroke="#E0E0E0" StrokeThickness="6"/>

                            <!-- Vòng tua ngược -->
                            <Path Stroke="#2196F3" StrokeThickness="6"
          StrokeStartLineCap="Round" StrokeEndLineCap="Round"
          x:Name="ProgressPath"
          Data="{Binding Path=Data, ElementName=ProgressArc}"/>

                            <!-- Text ở giữa (tuỳ chọn) -->
                            <TextBlock x:Name="CountdownText"
               Text="40s"
               FontSize="18"
               FontWeight="Bold"
               Foreground="#333"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

                            <!-- Progress Arc invisible to expose Data -->
                            <local:ArcSegmentControl x:Name="ProgressArc"
                             Angle="360"
                             Width="88"
                             Height="88"
                             Visibility="Collapsed"/>
                        </Grid>

                    </Border>
                </StackPanel>

                <!-- Nút Accept / Decline -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button Content="✅ Chấp nhận" Click="AcceptCall_Click"
                            Width="120" Height="40"
                            Background="#27AE60"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,12,0"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    Padding="8"
                                                    >
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#219653"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="❌ Từ chối" Click="DeclineCall_Click"
                            Width="120" Height="40"
                            Background="#E74C3C"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    Padding="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
