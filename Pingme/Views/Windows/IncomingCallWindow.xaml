<Window x:Class="Pingme.Views.Windows.IncomingCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cuộc gọi Thoại"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Avatar + Tên người gọi -->
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Ellipse x:Name="AvatarEllipse" Width="100" Height="100" Margin="0,10"/>
            <TextBlock x:Name="CallerName"
                       Text="Tên người gọi"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Đồng hồ đếm ngược -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Đang đổ chuông..."
                       FontSize="16"
                       FontWeight="Normal"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="CountdownText"
                       Text="00:40"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="Red"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Nút Chấp nhận / Từ chối -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="✅ Chấp nhận" Click="AcceptCall_Click"
                    Background="#FF2ECC71" Foreground="White"
                    Padding="10,5" FontWeight="Bold" Width="100"
                    Margin="0,0,15,0"/>
            <Button Content="❌ Từ chối" Click="DeclineCall_Click"
                    Background="#FFE74C3C" Foreground="White"
                    Padding="10,5" FontWeight="Bold" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
