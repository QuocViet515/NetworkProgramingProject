<Window x:Class="Pingme.Views.Windows.WaitingCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đang gọi..."
        Height="440"
        Width="340"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <DropShadowEffect x:Key="Shadow" BlurRadius="10" ShadowDepth="2" Color="#333333" Opacity="0.2"/>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="20"
                Background="White"
                Padding="24"
                BorderBrush="#ECECEC"
                BorderThickness="1"
                Effect="{StaticResource Shadow}">

            <!-- ⚠ StackPanel không có Spacing trong WPF cổ, dùng Margin thay -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Avatar -->
                <Ellipse x:Name="ReceiverAvatarUrl"
         Width="110"
         Height="110"
         Stroke="#2196F3"
         StrokeThickness="2"
         Margin="0,0,0,16">

                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Assets/Icons/avatar-default.png" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Text -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Đang thực hiện cuộc gọi"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#212121"
                               TextAlignment="Center"/>
                    <TextBlock Text="Vui lòng chờ người nhận phản hồi..."
                               FontSize="14"
                               Foreground="#555"
                               TextAlignment="Center"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <!-- Spinner -->
                <Grid Width="60" Height="60" Margin="0,0,0,16">
                    <Ellipse Stroke="#E0E0E0" StrokeThickness="4"/>
                    <Path Stroke="#2196F3" StrokeThickness="4"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          Data="M 30,4 A 26,26 0 1 1 29.9,4"
                          RenderTransformOrigin="0.5,0.5">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="Spinner" Angle="0"/>
                        </Path.RenderTransform>
                        <Path.Triggers>
                            <EventTrigger RoutedEvent="Path.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="Spinner"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360"
                                                         Duration="0:0:1.2"
                                                         EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Path.Triggers>
                    </Path>
                </Grid>

                <!-- Cancel Button -->
                <Button Width="160" Height="40"
                        Content="❌ Hủy cuộc gọi"
                        FontWeight="Bold"
                        Click="CancelCall_Click"
                        Cursor="Hand"
                        Background="#F44336"
                        Foreground="White"
                        BorderBrush="#D32F2F"
                        BorderThickness="1"
                        HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D32F2F"/>
                                    <Setter Property="BorderBrush" Value="#B71C1C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
