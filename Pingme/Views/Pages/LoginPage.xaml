<UserControl x:Class="Pingme.Views.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pingme.Views.Pages">
    <StackPanel Margin="50">
        <TextBox x:Name="UsernameBox" Margin="0,0,0,10"/>
        <PasswordBox x:Name="PasswordBox"  Margin="0,0,0,10"/>
        <Button Content="Đăng nhập" Click="Login_Click"/>
        <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
