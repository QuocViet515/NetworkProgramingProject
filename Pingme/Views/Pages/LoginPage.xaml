<Window x:Class="Pingme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pingme"
        mc:Ignorable="d"
        Title="Ping me" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="#f4f4f4"
        >
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: Logo and Text -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Assets/pingme.png" Width="150" Height="150" Margin="0,0,0,20"/>
            <TextBlock Text="Ping me" FontSize="36" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center"/>
            <TextBlock Text="Simple. Fast. Real-time." FontSize="16" Foreground="#444" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Right: Form -->
        <Border Grid.Column="1" Background="White" CornerRadius="12"
                Padding="40" VerticalAlignment="Center" Width="320" >
            <StackPanel>
                <TextBlock x:Name="FormTitle" Text="Login" FontSize="26" FontWeight="Bold"
                           Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid Margin="0,5" Height="40">
                    <TextBox x:Name="UsernameBox"
                        Padding="10" BorderBrush="#ccc" BorderThickness="1"
                        VerticalContentAlignment="Center"
                        TextChanged="TextBox_TextChanged"/>
                    <TextBlock Text="Username"
                        Foreground="#999"
                        IsHitTestVisible="False"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        x:Name="UsernamePlaceholder"
                        Visibility="Visible"/>
                </Grid>

                <PasswordBox x:Name="PasswordBox" Height="40" Margin="0,5"
                             Padding="10" BorderBrush="#ccc" BorderThickness="1" />
                <PasswordBox x:Name="ConfirmPasswordBox" Height="40" Margin="0,5"
                             Padding="10" BorderBrush="#ccc" BorderThickness="1" Visibility="Collapsed"/>

                <Button x:Name="ActionButton" Content="Login" Background="#397ecf" Foreground="White"
                        FontWeight="Bold" Height="40" Margin="0,15,0,0" Click="ActionButton_Click" />

                <TextBlock x:Name="SwitchFormText" Text="Forgot password?" FontSize="12"
                           Foreground="#444" HorizontalAlignment="Center" Margin="0,10,0,0" Cursor="Hand"
                           MouseDown="SwitchFormText_MouseDown"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
