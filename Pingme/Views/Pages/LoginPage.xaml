<Page x:Class="Pingme.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="WhiteSmoke"
      Title="LoginPage">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- KHỐI TRÁI -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40,0,40,0">
            <Image Source="/Assets/Icons/Ping-me.png" Width="150" Height="100" Margin="0,0,0,10" />
            <TextBlock Text="Ping me" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" />
            <TextBlock Text="Simple. Fast. Real-time." FontSize="18" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- KHỐI PHẢI -->
        <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="40" >
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="5" ShadowDepth="5" />
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" >

                <!-- Tiêu đề -->
                <TextBlock Text="Login" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <!-- Username -->
                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="15" Margin="0,0,0,10">
                    <TextBox    x:Name="UsernameTextBox"
                                Style="{StaticResource PlaceholderTextBox}"
                                Tag="Username or Email" BorderThickness="0"/>
                </Border>

                <!-- Password -->
                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="15" Margin="0,0,0,10">
                    <Grid>
                        <!-- PasswordBox (ẩn) -->
                        <PasswordBox x:Name="PasswordBox"
                            Padding="10,10,40,10"
                            Background="Transparent"
                            BorderThickness="0"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            Visibility="Visible"/>

                        <!-- TextBox (hiện) -->
                        <TextBox x:Name="PasswordVisibleBox"
                            Padding="10,10,40,10"
                            Background="Transparent"
                            BorderThickness="0"
                            Visibility="Collapsed"
                            TextChanged="PasswordVisibleBox_TextChanged"/>

                        <!-- Placeholder -->
                        <TextBlock x:Name="PasswordPlaceholder"
                            Text="Password"
                            Foreground="Gray"
                            Margin="12,0,40,0"
                            VerticalAlignment="Center"
                            IsHitTestVisible="False"
                            Visibility="Visible"/>

                        <!-- Eye Toggle -->
                        <Button x:Name="TogglePasswordButton"
                            Content="👁"
                            FontSize="14"
                            Width="30" Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"
                            Click="TogglePasswordButton_Click"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Cursor="Hand"/>
                    </Grid>
                </Border>


                <!-- Remember -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                    <CheckBox x:Name="RememberMeCheckBox"
                        VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="remember" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Login Button -->
                <Button Content="Login"
                    Height="40"
                    FontSize="16"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#29A8FF"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="Login_Click"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Forgot password -->
                    <TextBlock Grid.Column="0" Text="Forgot password ?" FontSize="14"
                        Foreground="Blue" HorizontalAlignment="Left" Cursor="Hand"
                        MouseDown="ForgotPassword_Click"/>

                    <!-- Sign up -->
                    <TextBlock Grid.Column="1" Text="Sign up ?" FontSize="14"
                        Foreground="Black" HorizontalAlignment="Right" Cursor="Hand"
                        MouseDown="SignUp_Click"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Page>
