<Page x:Class="Pingme.Views.Pages.ForgotPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFFDFDFD">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- KHỐI TRÁI: Form -->
        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="40" Margin="0,0,20,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <TextBlock Text="Reset Password" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Email -->
                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="15" Margin="0,0,0,10">
                    <TextBox Style="{StaticResource PlaceholderTextBox}"
                             Tag="Enter your email"
                             x:Name="EmailTextBox"
                             BorderThickness="0"/>
                </Border>

                <!-- Nút gửi -->
                <Button Content="Send reset link"
                        Style="{StaticResource RoundedButtonStyle}"
                        Background="#29A8FF"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontSize="16"
                        Height="40"
                        Click="SendResetLink_Click"/>

                <!-- Quay lại đăng nhập -->
                <TextBlock Text="Back to login"
                           FontSize="14"
                           Foreground="Gray"
                           Cursor="Hand"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           MouseDown="BackToLogin_MouseDown"/>
            </StackPanel>
        </Border>

        <!-- KHỐI PHẢI: Logo -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/Icons/Ping-me.png" Width="150" Height="100" Margin="0,0,0,10" />
            <TextBlock Text="Ping me" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" />
            <TextBlock Text="Simple. Fast. Real-time." FontSize="18" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
