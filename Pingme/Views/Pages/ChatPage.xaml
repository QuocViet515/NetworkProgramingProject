<Window x:Class="Pingme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Pingme.Models"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
        Title="ChatApp" Height="720" Width="1280" Background="#111">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- CỘT 1: GROUP CHATS -->
        <Border Padding="16" Background="#2D3748">
            <StackPanel Width="64" Orientation="Vertical"
            VerticalAlignment="Stretch"  HorizontalAlignment="Left"
            xmlns:fa="http://schemas.fontawesome.io/icons/">

                <!-- Logo / Title -->
                <TextBlock Text="PM" FontSize="20" FontWeight="Bold" Foreground="White"
               Margin="0,0,0,32" HorizontalAlignment="Center"/>

                <!-- Team Chat -->
                <Button Width="40" Height="40" Background="#4299E1" ToolTip="Team Chat"
            Margin="0,0,0,24" HorizontalAlignment="Center" VerticalAlignment="Top"
            Cursor="Hand">
                    <fa:ImageAwesome Icon="Users" Foreground="White" />
                </Button>

                <!-- Project X -->
                <Button Width="40" Height="40" Background="#9F7AEA" ToolTip="Project X"
            Margin="0,0,0,24" HorizontalAlignment="Center" VerticalAlignment="Top"
            Cursor="Hand">
                    <!--<fa:imageawesome icon="projectdiagram" foreground="white" />-->
                </Button>

                <!-- Gaming -->
                <Button Width="40" Height="40" Background="#48BB78" ToolTip="Gaming"
            Margin="0,0,0,24" HorizontalAlignment="Center" VerticalAlignment="Top"
            Cursor="Hand">
                    <fa:ImageAwesome Icon="Gamepad" Foreground="White" />
                </Button>

                <!-- Spacer to push Settings button to the bottom -->
                <StackPanel Height="Auto" VerticalAlignment="Stretch">
                    <StackPanel.Resources>
                        <Style TargetType="Rectangle">
                            <Setter Property="Height" Value="Auto"/>
                        </Style>
                    </StackPanel.Resources>
                    <Rectangle Height="Auto" VerticalAlignment="Stretch"/>
                </StackPanel>

                <!-- Settings -->
                <Button Width="40" Height="40" Background="#4A5568" ToolTip="Settings"
            HorizontalAlignment="Center" Cursor="Hand">
                    <fa:ImageAwesome Icon="Cog" Foreground="White" />
                </Button>

            </StackPanel>

        </Border>
        <!-- CỘT 2: DANH SÁCH CHAT CÁ NHÂN -->
        <StackPanel Width="250" Grid.Column="1"  Background="#EDF2F7">

            <!-- Header -->
            <Border BorderBrush="Gray" BorderThickness="1" Background="White" Width="250" HorizontalAlignment="Left">
                <StackPanel>

                    <!-- Header -->
                    <Border Padding="10" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Text="Chats" FontSize="16" FontWeight="SemiBold" />

                            <!-- Search Box -->
                            <Grid Margin="0,10,0,0">
                                <TextBox x:Name="SearchBox"
                                     Padding="25,5,10,5"
                                     Background="#f3f4f6"
                                     FontSize="12"
                                     Foreground="Black"
                                     VerticalAlignment="Center"
                                     BorderThickness="0"
                                     Height="30"/>
                                <fa:ImageAwesome Icon="Search"
                                             Width="14"
                                             Height="14"
                                             Foreground="Gray"
                                             VerticalAlignment="Center"
                                             Margin="8,0,0,0"
                                             HorizontalAlignment="Left"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Chat list scrollable -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!-- Chat item -->
                            <Border Padding="10" BorderBrush="#f3f4f6" BorderThickness="0,0,0,1" Background="White" Width="249">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Margin="0,0,10,0">
                                        <!-- Avatar -->
                                        <Grid Width="40" Height="40">
                                            <Ellipse Fill="#DBEAFE"/>
                                            <fa:ImageAwesome Icon="User"
                                                         Width="20"
                                                         Height="20"
                                                         Foreground="#3B82F6"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                            <!-- Online indicator -->
                                            <Ellipse Width="10" Height="10"
                                                 Fill="Green"
                                                 Stroke="White"
                                                 StrokeThickness="2"
                                                 HorizontalAlignment="Right"
                                                 VerticalAlignment="Bottom"/>
                                        </Grid>
                                    </Grid>

                                    <!-- Chat text -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="John Doe" FontWeight="SemiBold" FontSize="13"/>
                                        <TextBlock Text="Hey, how are you doing?" FontSize="11" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <!-- Time -->
                                    <TextBlock Grid.Column="2"
                                           Text="2 min"
                                           FontSize="11"
                                           Foreground="Gray"
                                           VerticalAlignment="Top"/>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                </StackPanel>
            </Border>
        </StackPanel>

        <!-- CỘT 3: KHUNG CHAT CHÍNH -->
        <Grid Grid.Column="2" Background="#3f3f8f" Grid.ColumnSpan="2" Margin="5,0,245,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content spacer -->
                <RowDefinition Height="Auto"/>
                <!-- Message input -->
            </Grid.RowDefinitions>

            <!-- 🔹 Chat Header -->
            <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="10" Grid.Row="0">
                <DockPanel>

                    <!-- Avatar + Name -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                        <!-- Avatar -->
                        <Border Width="40" Height="40" Background="#DBEAFE" CornerRadius="20" Margin="0,0,10,0">
                            <fa:ImageAwesome Icon="User" Width="18" Height="18" Foreground="#3B82F6"
                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Name and status -->
                        <StackPanel>
                            <TextBlock Text="John Doe" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Online" FontSize="10" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,0,0">
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Cursor="Hand">
                            <fa:ImageAwesome Icon="Phone" Foreground="Gray" Width="14" Height="14"/>
                        </Button>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Cursor="Hand">
                            <fa:ImageAwesome Icon="VideoCamera" Foreground="Gray" Width="14" Height="14"/>
                        </Button>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Cursor="Hand">
                            <fa:ImageAwesome Icon="Search" Foreground="Gray" Width="14" Height="14"/>
                        </Button>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Cursor="Hand">
                            <fa:ImageAwesome Icon="EllipsisV" Foreground="Gray" Width="14" Height="14"/>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- 🔹 Message Input -->
            <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1,1,0,0" Padding="10" Grid.Row="2">
                <DockPanel VerticalAlignment="Center">

                    <!-- Attach / Image buttons -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Cursor="Hand">
                            <fa:ImageAwesome Icon="Paperclip" Foreground="Gray" Width="16" Height="16"/>
                        </Button>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Cursor="Hand">
                            <fa:ImageAwesome Icon="Paperclip" Foreground="Gray" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>

                    <!-- Textbox with emoji -->
                    <Grid Margin="10,0" VerticalAlignment="Center">
                        <TextBox Height="34" Padding="10,0,30,0" FontSize="12"
                             Background="#F3F4F6" BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Text="Type a message..." />

                        <!-- Emoji icon -->
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Cursor="Hand"
                            HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
                            <fa:ImageAwesome Icon="Paperclip" Foreground="Gray" Width="16" Height="16"/>
                        </Button>
                    </Grid>

                    <!-- Send button -->
                    <Border Width="34" Height="34" Background="#3B82F6" CornerRadius="17" Margin="5,0,0,0" VerticalAlignment="Center">
                        <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Height="34" VerticalAlignment="Bottom">
                            <fa:ImageAwesome Icon="PaperPlane" Foreground="White" Width="14" Height="14"/>
                        </Button>
                    </Border>

                </DockPanel>
            </Border>
        </Grid>

        <!-- CỘT 4: TIỆN ÍCH -->
        <StackPanel Grid.Column="3" Background="#1a1a1a">
            <materialDesign:Card>
                <TabControl
    MinHeight="200"
    materialDesign:ColorZoneAssist.Mode="PrimaryMid"
    materialDesign:NavigationRailAssist.SelectionCornerRadius="50 10 10 10"
    materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
    Style="{StaticResource MaterialDesignNavigationRailTabControl}"
    TabStripPlacement="Top">
                    <materialDesign:NavigationRailAssist.FloatingContent>
                        <Button
        Margin="8"
        Style="{StaticResource MaterialDesignFloatingActionSecondaryButton}">
                            <materialDesign:PackIcon
          Width="24"
          Height="24"
          Kind="Plus" />
                        </Button>
                    </materialDesign:NavigationRailAssist.FloatingContent>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
          Width="auto"
          Height="auto">
                                <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="Folder" />
                                <TextBlock
            HorizontalAlignment="Center"
            Text="All Files" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel
        Margin="16">
                            <TextBlock
          Margin="0,0,0,8"
          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
          Text="All files" />
                            <TextBlock>
          <Run
            Text="tab 1 content. Default look and behaviors." />
          <LineBreak />
          <LineBreak />
          <Run
            FontStyle="Italic">
          Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...
        </Run>
                            </TextBlock>
                        </StackPanel>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
          Width="auto"
          Height="auto">
                                <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="ClockOutline" />
                                <TextBlock
            HorizontalAlignment="Center"
            Text="Recent" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel
        Margin="16">
                            <TextBlock
          Margin="0,0,0,8"
          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
          Text="Recent" />
                            <TextBlock>
          <Run
            Text="tab 2 content. Default look and behaviors." />
          <LineBreak />
          <LineBreak />
          <Run
            FontStyle="Italic">
          Praesent sed dui arcu. Vivamus porta auctor sagittis
        </Run>
                            </TextBlock>
                        </StackPanel>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
          Width="auto"
          Height="auto">
                                <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="Images" />
                                <TextBlock
            HorizontalAlignment="Center"
            Text="Photos" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel
        Margin="16">
                            <TextBlock
          Margin="0,0,0,8"
          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
          Text="Photos" />
                            <TextBlock>
          <Run
            Text="tab 3 content. Default look and behaviors." />
          <LineBreak />
          <LineBreak />
                            </TextBlock>
                        </StackPanel>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
          Width="auto"
          Height="auto">
                                <materialDesign:PackIcon
            Width="24"
            Height="24"
            HorizontalAlignment="Center"
            Kind="MusicBoxMultiple" />
                                <TextBlock
            HorizontalAlignment="Center"
            Text="Sounds" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel
        Margin="16">
                            <TextBlock
          Margin="0,0,0,8"
          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
          Text="Sounds" />
                            <TextBlock>
          <Run
            Text="tab 4 content. Default look and behaviors." />
          <LineBreak />
          <LineBreak />
                            </TextBlock>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </materialDesign:Card>
        </StackPanel>
    </Grid>
</Window>
