<Page x:Class="Pingme.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="clr-namespace:Pingme.Views.Controls"
      Background="#F2F2F2"
      Loaded="Page_Loaded">

    <Grid>
        <!-- Bố cục hàng: Tiêu đề (Auto), Nội dung (*) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ==== TIÊU ĐỀ ==== -->
        <Grid Grid.Row="0" Height="100" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Logo + tên ứng dụng -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <Ellipse Height="70" Width="70" Margin="0,0,15,0">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Assets/Icons/logo-app.jpg" />
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="Ping me" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Foreground="Black"/>
            </StackPanel>

            <!-- Nút chuyển sang Chat -->
            <Button Click="GoToChat_Click"
                    Width="70" Height="70"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="{TemplateBinding BorderThickness}" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>

                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Icons/chat.png" Stretch="UniformToFill" />
                </Button.Background>
                <Button.BorderBrush>LightGray</Button.BorderBrush>
                <Button.BorderThickness>2</Button.BorderThickness>
            </Button>
        </Grid>

        <!-- ==== PHẦN NỘI DUNG CHÍNH ==== -->
        <Grid Grid.Row="1" Margin="10"> 
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel (3/5) -->
            <Grid Grid.Column="0" Background="White" Margin="5"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" VerticalAlignment="Top" >
                    <!-- Header with buttons -->
                    <Grid Grid.Column="0" Background="WhiteSmoke"
                          Margin="10,10,10,10" Height="60" Width="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" x:Name="BtnNotification" Width="40" Height="40" Margin="5,0" Click="BtnNotification_Click" HorizontalAlignment="Left">
                            <Image Source="/Assets/Icons/notification.png" Stretch="Uniform"/>
                        </Button>
                        <Button Grid.Column="1" x:Name="BtnFriendGroup" Width="40" Height="40" Margin="5,0" Click="BtnFriendGroup_Click" HorizontalAlignment="Left">
                            <Image Source="/Assets/Icons/user.png" Stretch="Uniform"/>
                        </Button>
                        <Button Grid.Column="2" x:Name="BtnSetting" Width="40" Height="40" Margin="5,0" Click="BtnSetting_Click" HorizontalAlignment="Left">
                            <Image Source="/Assets/Icons/setting.png" Stretch="Uniform"/>
                        </Button>
                        <Border Grid.Column="3" BorderThickness="0.5" BorderBrush="Black" 
                                CornerRadius="15" Margin="5,0" Height="40">
                            <TextBox    x:Name="Search" 
                                Style="{StaticResource PlaceholderTextBox}"
                                Tag="Tìm kiếm ... " BorderThickness="0" HorizontalAlignment="Center"/>
                        </Border>
                        <Button Grid.Column="4" x:Name="BtnSearch" Width="40" Height="40" Margin="5,0" Click="BtnNotification_Click" HorizontalAlignment="Right">
                            <Image Source="/Assets/Icons/search.png" Stretch="Uniform"/>
                        </Button>
                    </Grid>
                </Grid>
                <!-- Dynamic content -->
                <ContentControl x:Name="LeftPanelContent" Grid.Row="1" Margin="10" />
            </Grid>
                <!-- Right Panel (2/5) -->
            <views:ProfileInfoControl Grid.Column="1" Margin="5,0" Background="White"/>
        </Grid>
    </Grid>
</Page>
