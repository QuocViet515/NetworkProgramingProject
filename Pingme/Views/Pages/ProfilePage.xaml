<Page x:Class="Pingme.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="clr-namespace:Pingme.Views.Controls"
      Background="#F2F2F2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel (3/5) -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header with buttons -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button x:Name="BtnNotification" Width="40" Height="40" Margin="5" Click="BtnNotification_Click">
                    <Image Source="/Assets/Icons/notification.png" Stretch="Uniform"/>
                </Button>
                <Button x:Name="BtnFriendGroup" Width="40" Height="40" Margin="5" Click="BtnFriendGroup_Click">
                    <Image Source="/Assets/Icons/user.png" Stretch="Uniform"/>
                </Button>
                <Button x:Name="BtnSetting" Width="40" Height="40" Margin="5" Click="BtnSetting_Click">
                    <Image Source="/Assets/Icons/setting.png" Stretch="Uniform"/>
                </Button>
            </StackPanel>

            <!-- Dynamic content -->
            <ContentControl x:Name="LeftPanelContent" Grid.Row="1" Margin="10" />
        </Grid>

        <!-- Right Panel (2/5) -->
        <views:ProfileInfoControl Grid.Column="1" Margin="10" />
    </Grid>
</Page>
